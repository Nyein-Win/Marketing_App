<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SecondMain">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A9E2F3">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/circleIndicato"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/btn_shap_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleIndicato"
            app:layout_constraintVertical_bias="0.0">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn1"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn1"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn1"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn1"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn1"
                                app:srcCompat="@drawable/sathapana"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About Sathapana"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn2"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn2"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn2"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn2"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn2"
                                app:srcCompat="@drawable/services"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Services"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn3"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn3"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn3"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn3"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn3"
                                app:srcCompat="@drawable/branch1"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Branches"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn4"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn4"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn4"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn4"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn4"
                                app:srcCompat="@drawable/news"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="News"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn5"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn5"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn5"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn5"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn5"
                                app:srcCompat="@drawable/loan_calculator"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loan Calculator"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn6"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn6"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn6"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn6"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn6"
                                app:srcCompat="@drawable/human_resources"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Human Resources"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn7"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn7"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn7"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn7"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn7"
                                app:srcCompat="@drawable/financial"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Financial Literacy"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">

                            <ImageView
                                android:id="@+id/imageViewbtn8"
                                android:layout_width="78dp"
                                android:layout_height="90dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.508"
                                app:srcCompat="@drawable/circle_btn" />

                            <ImageView
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewbtn8"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewbtn8"
                                app:layout_constraintStart_toStartOf="@+id/imageViewbtn8"
                                app:layout_constraintTop_toTopOf="@+id/imageViewbtn8"
                                app:srcCompat="@drawable/repayment"
                                app:tint="#ffffff" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Repayment Methods"
                            android:textAlignment="center"
                            android:textColor="#1974D2"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="18dp">



                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </LinearLayout>

                </TableRow>

            </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>





    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="@color/headercolor"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        />


</androidx.drawerlayout.widget.DrawerLayout>