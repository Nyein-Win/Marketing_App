<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opacity_background"
    tools:context=".Services">

    <Button
        android:id="@+id/service_loan_type_btn"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="521dp"
        android:background="@drawable/button_shap"
        android:drawableLeft="@drawable/financial"
        android:drawableRight="@drawable/next"
        android:drawableTint="@color/white"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/Loan"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.473" />



    <Button
        android:id="@+id/service_savings_btn"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_shap"
        android:drawableLeft="@drawable/saving"
        android:drawableRight="@drawable/next"
        android:drawableTint="@color/white"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Savings"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/service_loan_type_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/service_loan_type_btn"
        app:layout_constraintTop_toBottomOf="@+id/service_loan_type_btn" />

    <Button
        android:id="@+id/service_social_btn"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_shap"
        android:drawableLeft="@drawable/social_welfare"
        android:drawableRight="@drawable/next"
        android:drawableTint="@color/white"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Social Welfare"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/service_savings_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/service_savings_btn"
        app:layout_constraintTop_toBottomOf="@+id/service_savings_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="187dp"
        android:layout_height="31dp"
        android:drawableLeft="@drawable/lona_replace"
        android:gravity="center"
        android:text="Repayment Method"
        android:textColor="@color/design_default_color_secondary"
        app:drawableTint="@color/design_default_color_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_social_btn"
        app:layout_constraintVertical_bias="0.349" />


</androidx.constraintlayout.widget.ConstraintLayout>