<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opacity_background"
    tools:ignore="ExtraText">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <Button
                android:id="@+id/yangobtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/humanbutton"
                android:text="၁။ရန်ကုန်တိုင်းဒေသကြီး"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၂။မန္တလေးတိုင်းဒေသကြီး"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၃။ပဲခူးတိုင်းဒေသကြီး"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၄။ဧရာဝတီတိုင်းဒေသကြီး"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button5" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၅။မကွေးတိုင်းဒေသကြီး"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၆။စစ်ကိုင်းတိုင်းဒေသကြီး"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button7" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၇။မွန်ပြည်နယ်"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button8" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၈။ရှမ်းပြည်နယ်"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button9" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၉။ကရင်ပြည်နယ်"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button10" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၁၀။ကယားပြည်နယ်"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button11" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="၁၁။နေပြည်တော်ပြည်ထောင်စုနယ်မြေ"
                android:textAlignment="textStart"
                android:paddingStart="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/humanbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.544"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button12" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
